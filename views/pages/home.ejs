<!DOCTYPE html>
<html>
<head>
  <title>Add Medication</title>
</head>
<body>
  <h1>Add Medication</h1>
  <form action="/medications" method="POST">
    <div>
      <label for="name">Medicine Name:</label>
      <input type="text" id="name" name="name" required>
    </div>
    <div>
      <label for="description">Description:</label>
      <textarea id="description" name="description"></textarea>
    </div>
    <div>
      <label for="type">Type:</label>
      <select id="type" name="type">
        <option value="one-time">One-Time</option>
        <option value="recurring">Recurring</option>
      </select>
    </div>
    <div id="one-time-schedule">
      <label for="date">Date:</label>
      <input type="date" id="date" name="date">
      <label for="time">Time:</label>
      <input type="time" id="time" name="time">
    </div>
    <div id="recurring-schedule" style="display: none;">
      <div>
        <label for="startDate">Start Date:</label>
        <input type="date" id="startDate" name="startDate">
      </div>
      <div>
        <label for="endDate">End Date:</label>
        <input type="date" id="endDate" name="endDate">
      </div>
      <div>
        <label for="frequency">Frequency:</label>
        <select id="frequency" name="frequency">
          <option value="Daily">Daily</option>
          <option value="Weekly">Weekly</option>
        </select>
      </div>
      <div id="dayOfWeek" style="display: none;">
        <label for="dayOfWeekSelect">Day of the Week:</label>
        <select id="dayOfWeekSelect" name="dayOfWeek">
          <option value="Sunday">Sunday</option>
          <option value="Monday">Monday</option>
          <option value="Tuesday">Tuesday</option>
          <option value="Wednesday">Wednesday</option>
          <option value="Thursday">Thursday</option>
          <option value="Friday">Friday</option>
          <option value="Saturday">Saturday</option>
        </select>
      </div>
      <div>
        <label for="time">Time:</label>
        <input type="time" id="recurringTime" name="time">
      </div>
    </div>
    <button type="submit">Add Medication</button>
  </form>

  <script src="/js/home.js"></script>
</body>
</html>
